    <h2>تأكيد عملية الدفع</h2>
    <form id="payment-form">
        <div class="form-group">
            <label for="transaction-id">رقم المعاملة:</label>
            <input type="text" id="transaction-id" required>
        </div>
        <div class="form-group">
            <label for="amount-paid">المبلغ المدفوع:</label>
            <input type="number" id="amount-paid" required>
        </div>
        <div class="form-group">
            <label for="payment-date">تاريخ الدفع:</label>
            <input type="date" id="payment-date" required>
        </div>
        <div class="form-group">
            <label for="payment-receipt">ارفع وصل الدفع:</label>
            <input type="file" id="payment-receipt" accept="image/*,application/pdf" required>
        </div>

        <button type="button" onclick="verifyPayment()">إرسال تأكيد الدفع</button>

        <div id="success-message" class="success-message">
            ✅ تم تأكيد عملية الدفع بنجاح!
        </div>
        <div id="activation-code-link" class="activation-code-link">
            <a href="https://drive.google.com/file/d/1t8InGgMsfwIlSL5eSOgvL9itZi4KYLNq/view?usp=sharing" target="_blank">تحميل كود التفعيل</a>
        </div>
    </form>
</div>

<script>
    function verifyPayment() {
        const transactionId = document.getElementById('transaction-id').value;
        const amountPaid = document.getElementById('amount-paid').value;
        const paymentDate = document.getElementById('payment-date').value;
        const receipt = document.getElementById('payment-receipt').files[0];

        if (!transactionId || !amountPaid || !paymentDate || !receipt) {
            alert('الرجاء ملء جميع الحقول وتحميل وصل الدفع.');
            return;
        }

        // هنا يمكنك إرسال الطلب إلى الخادم للتحقق من الدفع
        fetch('/verify-payment', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                transactionId,
                amountPaid,
                paymentDate,
                userId: 'user123'  // يتم إضافة معرف المستخدم المناسب
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById('success-message').style.display = 'block';
                document.getElementById('activation-code-link').style.display = 'block';
            } else {
                alert('❌ لم يتم تأكيد الدفع');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('❌ حدث خطأ أثناء التحقق من الدفع');
        });
    }
</script>

